<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8"
    android:orientation="vertical"
    tools:context=".PayActivity" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <RadioGroup
        android:id="@+id/rg_pay_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp" >

        <RadioButton
            android:id="@+id/rb_yue_pay"
            android:layout_width="175dp"
            android:layout_height="42dp"
            android:text=""
            android:textColor="@color/color323232"
            android:drawableLeft="@drawable/radio_button_background"
            android:button="@null"
            android:drawablePadding="6dp"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:drawableRight="@drawable/pay_ye"
            android:paddingBottom="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" 
            android:background="@color/colorececec" />

        <RadioButton
            android:id="@+id/rb_online_pay"
            android:layout_width="175dp"
            android:layout_height="42dp"
            android:text=""
            android:textColor="@color/color323232"
            android:drawableLeft="@drawable/radio_button_background"
            android:button="@null"
            android:drawablePadding="6dp"
            android:textSize="14sp" 
            android:paddingTop="10dp"
            android:drawableRight="@drawable/pay_ll"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" 
            android:background="@color/colorececec" />
        <RadioButton
            android:id="@+id/rb_wx_pay"
            android:layout_width="175dp"
            android:layout_height="42dp"
            android:text=""
            android:textColor="@color/color323232"
            android:drawableLeft="@drawable/radio_button_background"
            android:button="@null"
            android:drawablePadding="6dp"
            android:textSize="14sp" 
            android:paddingTop="10dp"
            android:drawableRight="@drawable/pay_wx"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" 
            android:background="@color/colorececec" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_action_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_jujue"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="27dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_common_btn_red"
            android:text="取消支付"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />

        <Button
            android:id="@+id/bt_zhifu"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="27dp"
            android:layout_weight="1.0"
            android:background="@drawable/button_common_btn_blue"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />
    </LinearLayout>
</LinearLayout>