<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />
    <!-- 首页广告banner -->

    <RelativeLayout
        android:id="@+id/ll_adv"
        android:layout_width="fill_parent"
        android:layout_height="114dp"
        android:layout_below="@+id/i_head"
        android:orientation="vertical" >

        <com.gezitech.widget.ExtendViewFlipper
            android:id="@+id/vf_ad"
            android:layout_width="fill_parent"
            android:layout_height="114dp" >
        </com.gezitech.widget.ExtendViewFlipper>

        <LinearLayout
            android:id="@+id/pager_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/registered_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ll_adv" >

        <LinearLayout
            android:id="@+id/registered_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp" >

                <TextView
                    android:id="@+id/tv_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/phonenumber"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_phonenumber"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:paddingLeft="90dp"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_verification_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/yanzhengma"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_verification_code"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/view_select"
                    android:paddingLeft="90dp"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" 
                    android:inputType="number"/>

                <Button
                    android:id="@+id/bt_send_verification_code"
                    android:layout_width="78dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/common_btn_gray"
                    android:text="@string/fasongyanzhengma"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/enter_password"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_enter_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/shurumima"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_enter_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:inputType="textPassword"
                    android:paddingLeft="90dp"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/input_again"
                android:layout_width="fill_parent"
                android:layout_height="48dp" >

                <TextView
                    android:id="@+id/tv_input_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/zaicishuru"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_input_again"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:inputType="textPassword"
                    android:paddingLeft="90dp"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" />
            </RelativeLayout>

            <Button
                android:id="@+id/Registered_registered"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_common_btn_blue"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/size18" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>