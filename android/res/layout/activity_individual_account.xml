<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8"
    android:orientation="vertical"
    tools:context=".IndividualAccountActivity" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/colorf8f8f8" />

    <ScrollView
        android:id="@+id/individualaccount_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/individualaccount_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorf8f8f8"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/individualaccount_blue"
                android:layout_width="fill_parent"
                android:layout_height="78dp"
                android:layout_weight="3"
                android:background="@color/color3ca5f3"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/yue"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.5"
                        android:text="@string/yue"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_yuenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:text="816.5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size18"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color2c90f6" />

                <LinearLayout
                    android:id="@+id/shouru"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_shouru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.5"
                        android:text="@string/shouru"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_shourunumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:text="1016.5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size18"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color2c90f6" />

                <LinearLayout
                    android:id="@+id/zhichu"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_zhichu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_weight="0.5"
                        android:text="@string/zhichu"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_zhichunumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5"
                        android:text="200"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size18"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="12dp"
                android:background="@color/colorf8f8f8" />

            <LinearLayout
                android:id="@+id/individualaccount_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >
				<RelativeLayout
                    android:id="@+id/individualaccount_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_personcolor"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_individualaccount_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="账户明细"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />

                    <ImageView
                        android:id="@+id/iv_individualaccount_detail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/common_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />
                <RelativeLayout
                    android:id="@+id/individualaccount_chongzhi"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_personcolor"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_individualaccount_chongzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="@string/chongzhi"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />

                    <ImageView
                        android:id="@+id/iv_individualaccount_chongzhi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/common_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />

                <RelativeLayout
                    android:id="@+id/individualaccount_tixian"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/selector_personcolor"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_individualaccount_tixian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="@string/tixian"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />
					
					<TextView
                        android:id="@+id/tv_individualaccount_tixian_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="0"
                        android:textColor="@color/color2c90f6"
                        android:textSize="@dimen/size14"
                        android:layout_toLeftOf="@+id/iv_individualaccount_tixian" />
                    <ImageView
                        android:id="@+id/iv_individualaccount_tixian"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/common_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />

                <RelativeLayout
                    android:id="@+id/individualaccount_huodongjuan"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/tv_individualaccount_huodongjuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="@string/huodongjuan"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/text_individualaccount_huodongjuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="0"
                        android:textColor="@color/color2c90f6"
                        android:textSize="@dimen/size14" 
                        android:layout_toLeftOf="@+id/iv_individualaccount_arrow"/>
                    <ImageView
                        android:id="@+id/iv_individualaccount_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/common_arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>