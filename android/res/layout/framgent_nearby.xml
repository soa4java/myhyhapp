<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/i_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            layout="@layout/common_head" />

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#FFF3BB"
            android:drawableRight="@drawable/common_arrow"
            android:gravity="center_vertical|center_horizontal"
            android:text="您没有打开GPS将不能收到喊一喊。检查设置"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <com.gezitech.widget.MyListView
                android:id="@+id/list_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorf8f8f8"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:listSelector="@android:color/transparent"
                android:scrollingCache="false" >
            </com.gezitech.widget.MyListView>

            <TextView
                android:id="@+id/tv_near_new_msg"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/near_new_msg"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="附近有1条动态"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                
                android:visibility="gone"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>