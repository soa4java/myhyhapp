<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp" >
    <LinearLayout
        android:id="@+id/ll_voice"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fbhyh_bg"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fbhyh_sound_01" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5.0dip"
            android:text="松开手指, 立即发布"
            android:textColor="#ffffff" />
         <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="剩余录音时间：10"
	        android:textColor="@color/colorff340c"
	        android:textSize="12sp"
	        android:id="@+id/tv_count_down_voice_time"
	        android:visibility="gone"
	        />
    </LinearLayout>
   
</RelativeLayout>