<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 时间 -->

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/shake"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="1小时前"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 我的消息 -->

        <RelativeLayout
            android:id="@+id/ll_my_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="18dp"
           
            android:visibility="gone" >

            <!-- 头像 -->

            <ImageView
                android:id="@+id/iv_my_head"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/service_photo"
                android:clickable="true" />
            <!-- 文本 -->

            <TextView
                android:id="@+id/tv_my_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toLeftOf="@+id/iv_my_head"
                android:background="@drawable/dhck_dialogbox_blue_select"
                android:padding="12dp"
                android:text="我的文本"
                android:textColor="#323232"
                android:textSize="12sp"
                android:visibility="gone" />
            <!-- 语音 -->

            <LinearLayout
                android:id="@+id/ll_my_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_my_head"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_my_yuyin_len"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:text="2&apos;&apos;"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size12" />

                <RelativeLayout
                    android:id="@+id/rl_my_yuyin"
                    android:layout_width="85dp"
                    android:layout_height="43dp"
                    android:background="@drawable/button_dhckdialogbox_biue"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/iv_my_voice_sign"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dhck_voice_blue_03" />
                </RelativeLayout>
            </LinearLayout>
            <!-- 图片 -->

            <LinearLayout
                android:id="@+id/ll_my_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_my_head"
                android:background="@drawable/dhck_dialogbox_blue2_select"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_my_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/common_default_photo" />
            </LinearLayout>
            <!-- 图片 -->

            <RelativeLayout
                android:id="@+id/ll_my_map"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_toLeftOf="@+id/iv_my_head"
                android:background="@drawable/dhck_dialogbox_blue2_select"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_my_map"
                    android:layout_width="136dp"
                    android:layout_height="93dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/common_default_photo" />
				
                <TextView
                    android:id="@+id/tv_my_address"
                    android:layout_width="136dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="#70000000"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="重庆"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
            <!-- 名片 -->

            <LinearLayout
                android:id="@+id/ll_my_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_my_head"
                android:background="@drawable/dhck_dialogbox_blue2_select"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="3dp"
                android:paddingRight="11dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="名片"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp" >

                    <ImageView
                        android:id="@+id/iv_my_card_head"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/common_default_photo" />

                    <TextView
                        android:id="@+id/tv_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_my_card_head"
                        android:text="昵称:"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_my_name_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_my_name"
                        android:text="小肚子"
                        android:textColor="@color/color2c90f6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_my_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_my_name"
                        android:layout_toRightOf="@+id/iv_my_card_head"
                        android:text="电话:"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_my_phone_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_my_name"
                        android:layout_toRightOf="@+id/tv_my_phone"
                        android:text="18725658842"
                        android:textColor="@color/color2c90f6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_my_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_my_phone"
                        android:layout_toRightOf="@+id/iv_my_card_head"
                        android:text="地址:"
                        android:textColor="@color/color323232"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_my_address_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_my_phone"
                        android:layout_toRightOf="@+id/tv_my_address"
                        android:text="未填写"
                        android:textColor="@color/color2c90f6"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- 朋友信息 -->

        <RelativeLayout
            android:id="@+id/ll_f_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="18dp"
            android:paddingRight="30dp" >

            <!-- 头像 -->

            <ImageView
                android:id="@+id/iv_f_head"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/service_photo"
                android:clickable="true" />
            <ImageView
                    android:id="@+id/iv_sys_head"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                	android:layout_marginRight="5dp"
               	 	android:src="@drawable/service_photo"
               	 	android:visibility="gone"/>
            <!-- 文本 -->

            <TextView
                android:id="@+id/tv_f_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/iv_f_head"
                android:background="@drawable/dhck_dialogbox_white_select"
                android:padding="12dp"
                android:text="我的文本" 
                android:textColor="#323232"
                android:textSize="12sp"
                android:visibility="gone" />
            <!-- 语音 -->

            <LinearLayout
                android:id="@+id/ll_f_yuyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_f_head"
                android:orientation="horizontal"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/rl_f_yuyin"
                    android:layout_width="85dp"
                    android:layout_height="43dp"
                    android:background="@drawable/dhck_dialogbox_white_select"
                    android:clickable="true" >

                    <ImageView
                        android:id="@+id/iv_f_voice_sign"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dhck_voice_gray_03" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_f_yuyin_len"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="2&apos;&apos;"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size12" />
            </LinearLayout>
            <!-- 图片 -->

            <LinearLayout
                android:id="@+id/ll_f_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_f_head"
                android:background="@drawable/dhck_dialogbox_white2_select"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_f_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/common_default_photo" />
            </LinearLayout>
            <!-- 图片 -->

            <RelativeLayout
                android:id="@+id/ll_f_map"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@+id/iv_f_head"
                android:background="@drawable/dhck_dialogbox_white2_select"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/iv_f_map"
                    android:layout_width="136dp"
                    android:layout_height="93dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/common_default_photo" />

                <TextView
                    android:id="@+id/tv_f_address"
                    android:layout_width="136dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:background="#70000000"
                    android:ellipsize="end"
                    android:gravity="center_horizontal|left|center_vertical"
                    android:lines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="重庆"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
            <!-- 名片 -->

            <LinearLayout
                android:id="@+id/ll_f_card"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_f_head"
                android:background="@drawable/dhck_dialogbox_white2_select"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:padding="5dp"
                    android:text="名片"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp" >

                    <RelativeLayout
                        android:id="@+id/rl_card_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_f_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称:"
                            android:textColor="@color/color323232"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_f_name_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_f_name"
                            android:text="小肚子"
                            android:textColor="@color/color2c90f6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_f_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_f_name"
                            android:text="电话:"
                            android:textColor="@color/color323232"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_f_phone_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_f_name"
                            android:layout_toRightOf="@+id/tv_f_phone"
                            android:text="18725658842"
                            android:textColor="@color/color2c90f6"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_f_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_f_phone"
                            android:text="地址:"
                            android:textColor="@color/color323232"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_f_address_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_f_phone"
                            android:layout_toRightOf="@+id/tv_f_address"
                            android:text="未填写"
                            android:textColor="@color/color2c90f6"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_f_card_head"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/rl_card_left"
                        android:background="@drawable/common_default_photo" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- 账单 -->

        <RelativeLayout
            android:id="@+id/rl_bill"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dhck_dialogbox_white2_select"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_bill_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/tv_bill_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账单编号:"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_code_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_bill_code"
                    android:text="201312121223"
                    android:textColor="@color/color949494"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bill_code"
                    android:layout_marginTop="5dp"
                    android:text="备注"
                    android:textColor="@color/color2c90f6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bill_notes"
                    android:layout_marginTop="5dp"
                    android:text="金额:"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_money_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bill_notes"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_bill_money"
                    android:text="12"
                    android:textColor="@color/color2c90f6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bill_money"
                    android:layout_marginTop="5dp"
                    android:text="剩余时间:"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_bill_time_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bill_money"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_bill_time"
                    android:text="112344"
                    android:textColor="@color/color949494"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>
        <!-- 已付款 -->

        <LinearLayout
            android:id="@+id/rl_pay_bill"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dhck_dialogbox_white2_select"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_pay_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="账单已支付"
                android:textColor="@color/colorff340c"
                android:textSize="14sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorececec" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账单编号："
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_pay_tradecode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201312121223"
                    android:textColor="@color/color949494"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 付款 -->

        <RelativeLayout
            android:id="@+id/rl_c_pay"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dhck_dialogbox_white2_select"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/ll_c_head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_c_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易已付款"
                    android:textColor="@color/colorff340c"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_c_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(点击收款)"
                    android:textColor="@color/color949494"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/v_c_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_c_head"
                android:background="@color/colorececec" />

            <RelativeLayout
                android:id="@+id/rl_c_pay_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_c_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/tv_c_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账单编号:"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_c_code_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_c_code"
                    android:text="201312121223"
                    android:textColor="@color/color949494"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_c_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_c_code"
                    android:layout_marginTop="5dp"
                    android:text="备注"
                    android:textColor="@color/color2c90f6"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_c_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_c_notes"
                    android:layout_marginTop="5dp"
                    android:text="金额:"
                    android:textColor="@color/color323232"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_c_money_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
