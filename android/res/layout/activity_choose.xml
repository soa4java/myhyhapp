<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorf8f8f8"
    tools:context=".ChooseActivity" >

<include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

<LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginTop="12dp"
  android:background="@color/white"
  android:paddingLeft="18dp"
  android:paddingRight="18dp">
<RelativeLayout 
  android:id="@+id/choose_text"
  android:layout_width="fill_parent"
  android:layout_height="48dp">
 <TextView 
  android:id="@+id/tv_choose_text"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentLeft="true"
  android:layout_centerVertical="true"
  android:layout_marginLeft="6dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color2c90f6"
  android:text="@string/ciweizhangdanbeizhuwenzi"/> 
</RelativeLayout>
 <View
  android:layout_width="fill_parent"
  android:layout_height="1dp"
  android:background="@color/colorececec"/>
 <LinearLayout 
  android:id="@+id/choose_bill"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="48dp">
 <TextView 
  android:id="@+id/tv_choose_bill"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="left|center_vertical"
  android:layout_marginLeft="6dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color323232"
  android:text="@string/bill_amount"/>
  <TextView 
  android:id="@+id/tv_choose_billnumber"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="left|center_vertical"
  android:layout_marginLeft="8dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color2c90f6"
  android:text="aaa"/>
   <TextView 
  android:id="@+id/tv_time_pay"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right|center_vertical"
  android:layout_marginLeft="50dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color323232"
  android:text="@string/time_pay"/>
  <TextView 
  android:id="@+id/tv_time_paynumber"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right|center_vertical"
  android:layout_marginLeft="8dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color949494"
  android:text="ssa"/>  
</LinearLayout>
</LinearLayout>
<LinearLayout 
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:layout_marginTop="12dp"
  android:background="@color/white"
  android:paddingLeft="18dp"
  android:paddingRight="18dp">
<RelativeLayout 
  android:id="@+id/choose_notewriting"
  android:layout_width="fill_parent"
  android:layout_height="48dp">
 <TextView 
  android:id="@+id/tv_notewriting"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentLeft="true"
  android:layout_centerVertical="true"
  android:layout_marginLeft="6dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color2c90f6"
  android:text="@string/beizhuwenzishili"/> 
</RelativeLayout>
 <View
  android:layout_width="fill_parent"
  android:layout_height="1dp"
  android:background="@color/colorececec"/>
 <LinearLayout 
  android:id="@+id/choose_billnotewriting"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="48dp">
 <TextView 
  android:id="@+id/tv_choose_billnotewriting"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="left|center_vertical"
  android:layout_marginLeft="6dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color323232"
  android:text="@string/bill_amount"/>
  <TextView 
  android:id="@+id/tv_choose_billnotewritingnumber"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="left|center_vertical"
  android:layout_marginLeft="8dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color2c90f6"
  android:text="aaa"/>
  <TextView 
  android:id="@+id/tv_billnotewritingtime_pay"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right|center_vertical"
  android:layout_marginLeft="50dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color323232"
  android:text="@string/time_pay"/>
  <TextView 
  android:id="@+id/tv_billnotewritingtime_paynumber"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="right|center_vertical"
  android:layout_marginLeft="8dp"
  android:textSize="@dimen/size14"
  android:textColor="@color/color949494"
  android:text="ssa"/>
</LinearLayout>
  <View
  android:layout_width="fill_parent"
  android:layout_height="1dp"
  android:background="@color/colorececec"/> 
  <RelativeLayout 
  android:id="@+id/choose_picture"
  android:layout_width="fill_parent"
  android:layout_height="60dp">
  <TextView 
   android:id="@+id/tv_choose_picture"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:layout_marginLeft="6dp"
   android:layout_alignParentLeft="true"
   android:layout_centerVertical="true"
   android:textSize="@dimen/size14"
   android:textColor="@color/color323232"
   android:text="@string/picture"/> 
  <ImageView 
   android:id="@+id/choose_pictureone"
   android:layout_width="42dp"
   android:layout_height="42dp"
   android:layout_alignParentRight="true"
   android:layout_centerVertical="true"
   android:src="@drawable/testphoto_01"/>
   <ImageView 
   android:id="@+id/choose_picturetwo"
   android:layout_width="42dp"
   android:layout_height="42dp"
   android:layout_marginRight="6dp"
   android:layout_centerVertical="true"
   android:layout_toLeftOf="@id/choose_pictureone"
   android:src="@drawable/testphoto_01"/>
   <ImageView 
   android:id="@+id/choose_picturethree"
   android:layout_width="42dp"
   android:layout_height="42dp"
   android:layout_marginRight="6dp"
   android:layout_centerVertical="true"
   android:layout_toLeftOf="@id/choose_picturetwo"
   android:src="@drawable/testphoto_01"/>     
  </RelativeLayout> 
</LinearLayout>
</LinearLayout>