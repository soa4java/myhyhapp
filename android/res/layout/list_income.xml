<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 	android:descendantFocusability="blocksDescendants">
 	<!-- 个人 -->
    <LinearLayout android:id="@+id/ll_head2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
		android:clickable="true"
		android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:visibility="gone"
        android:orientation="horizontal">
	    <TextView android:id="@+id/tv_yonghu"
	        android:layout_width="60dp"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text=""
	        android:textSize="@dimen/size12"
	        android:gravity="center_vertical|center_horizontal"/>
		<TextView android:id="@+id/tv_huodongjuan"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text=""
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:gravity="center_vertical|center_horizontal"/>
		<TextView android:id="@+id/tv_shijian2"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text=""
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:gravity="center_horizontal|center_vertical"/>
	</LinearLayout>
	<!-- 商家 -->
	<LinearLayout android:id="@+id/ll_head1" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
		android:clickable="true"
		android:paddingLeft="5dp"
    	android:paddingRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone">
	    <TextView android:id="@+id/tv_shangjia"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text="商家"
	        android:textSize="@dimen/size12"
	        android:layout_marginRight="3dp"
	         android:layout_weight="1"
	        android:gravity="center_vertical|center_horizontal"/>
		<TextView android:id="@+id/tv_goumaiyonghu"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text="购买用户"
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:layout_marginRight="3dp"
	        android:gravity="center_vertical|center_horizontal"/>
		<TextView android:id="@+id/tv_jiaoyi"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text="交易元"
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:gravity="center_horizontal|center_vertical"/>
		<TextView android:id="@+id/tv_ticheng"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text="提成"
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:gravity="center_horizontal|center_vertical"/>
		<TextView android:id="@+id/tv_shijian1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="@color/color454545"
	        android:text="时间"
	        android:textSize="@dimen/size12"
	        android:layout_weight="1"
	        android:gravity="center_horizontal|center_vertical"/>
	</LinearLayout>
	<!-- 销售账单 和 购买账单 -->
	<LinearLayout android:id="@+id/ll_head3" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
		android:clickable="true"
		android:paddingLeft="5dp"
    	android:paddingRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone">
	    <TextView	android:id="@+id/tv_bianhao3" 
            android:layout_height="fill_parent"
            android:layout_width="60dp"
            android:text="编号"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_marginRight="5dp"/>
        <TextView android:id="@+id/tv_username3" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="用户"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_jine3" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="金额(元)"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_leixing3" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="类型"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_time_3"  
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="时间"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"
            />
	</LinearLayout>
	<!-- 账单明细 -->
	<LinearLayout android:id="@+id/ll_head4" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
		android:clickable="true"
		android:paddingLeft="5dp"
    	android:paddingRight="5dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/tv_jine4" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="金额(元)"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
       	<TextView android:id="@+id/tv_beizhu4" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text=""
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_leixing4" 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="类型"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_time_4"  
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="时间"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/color454545"
            android:textSize="@dimen/size12"
            android:layout_weight="1"
            />
	</LinearLayout>
	<View android:background="@color/colorececec"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>
</LinearLayout>
