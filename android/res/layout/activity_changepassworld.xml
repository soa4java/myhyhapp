<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassworldActivity" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <ScrollView
        android:id="@+id/changepassworld_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/changepassworld_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/changepassworld_yuanmima"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    android:id="@+id/tv_changepassworld_yuanmima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/yuanmima"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_changepassworld_yuanmima"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:hint="原密码"
                    android:paddingLeft="90dp"
                    android:inputType="textPassword"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changepassworld_xinmima"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    android:id="@+id/tv_changepassworld_xinmima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/xinmima"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_changepassworld_xinmima"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:hint="新密码"
                    android:paddingLeft="90dp"
                    android:inputType="textPassword"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changepassworld_zaicishuru"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:clickable="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <TextView
                    android:id="@+id/tv_changepassworld_zaicishuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="@string/zaicishuru"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <EditText
                    android:id="@+id/ed_changepassworld_zaicishuru"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/view_select"
                    android:hint="重复新密码"
                    android:paddingLeft="90dp"
                    android:inputType="textPassword"
                    android:textColor="@color/selector_textcolor"
                    android:textSize="@dimen/size14" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/changepassworld_bottom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dp"
                android:background="@color/colorf8f8f8"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <Button
                    android:id="@+id/changepassworld_OK"
                    android:layout_width="fill_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_common_btn_blue"
                    android:text="@string/querenxiugai"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>