<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <LinearLayout
        android:id="@+id/feedback_middle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" >

        <EditText
            android:id="@+id/ed_feedback_content"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/view_select"
            android:hint="投诉举报原因"
            android:paddingLeft="6dp"
            android:textColor="@color/selector_textcolor"
            android:textSize="@dimen/size14" />

        <TextView
            android:id="@+id/feedback_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="@string/tousu_hyh"
            android:textColor="@color/color949494"
            android:textSize="@dimen/size12" />


        <Button
            android:id="@+id/feedback_tijiao"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_common_btn_blue"
            android:text="@string/tijiao"
            android:textColor="@color/white"
            android:textSize="@dimen/size18" />
    </LinearLayout>

</LinearLayout>