<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/ll_list_nearby"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">
        <!-- 头像 -->
        <ImageView android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/comment_default_pic"
            android:layout_marginRight="12dp"/>
        <LinearLayout android:id="@+id/ll_right_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!-- 用户名和性别 -->
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
	            <TextView android:id="@+id/tv_username"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="用户名"
	                android:textSize="@dimen/size14"
	                android:textColor="@color/color3ca5f3"
	                />
	            <ImageView android:id="@+id/iv_sex"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="6dp"/>
	            <View android:layout_width="wrap_content"
	                android:layout_height="5dp"
	                android:layout_weight="1.0"
	                android:background="@android:color/transparent"/>
	            <!-- 删除 -->
	            <TextView android:id="@+id/tv_delete"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="删除"
	                android:textSize="@dimen/size14"
	                android:textColor="@color/color3ca5f3"
	                android:visibility="gone"
	                />
            </LinearLayout>
            <TextView android:id="@+id/tv_content"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名用户名"
	                android:textSize="@dimen/size14"
	                android:layout_marginBottom="3dp"
	                android:textColor="@color/color323232"
	                android:lineSpacingExtra="3dp"
	                />
            <Button android:id="@+id/bt_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全文"
                android:textColor="@color/color3CA5F3"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:layout_marginBottom="5dp"/>
            <!-- 9宫格 -->
            <com.gezitech.widget.FlowLayout android:id="@+id/ll_pic_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:visibility="gone"
                >
                
                
            </com.gezitech.widget.FlowLayout>
            
            
            <!-- 操作菜单  -->
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_time"/>
                <TextView android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:textColor="@color/color949494"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="9dp"
                    android:id="@+id/tv_time"/>
                 <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_distance"/>
                <TextView android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="10000m"
                     android:singleLine="true"
                    android:textColor="@color/color949494"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_distance"/>
                <LinearLayout android:layout_weight="1.0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right|center_vertical">
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_like_nor"
	                    android:id="@+id/iv_like"/>
	                <ImageView android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:src="@drawable/icon_comment"
	                    android:layout_marginLeft="12dp"
	                    android:id="@+id/iv_comment"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:id="@+id/ll_comment_box"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/like_bg">
                <com.gezitech.widget.FlowLayout android:id="@+id/ll_like_list"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:layout_marginBottom="2dp"
	                >
                </com.gezitech.widget.FlowLayout>
                <LinearLayout android:id="@+id/ll_comment_list_box"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View android:id="@+id/v_line"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colord4d4d4"/>
                    <LinearLayout android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="vertical"
                        android:id="@+id/ll_comment_list">

                    </LinearLayout>
                    <Button android:id="@+id/bt_more_comment"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="更多"
		                android:textColor="@color/color3CA5F3"
		                android:textSize="12sp"
		                android:layout_gravity="right"
		                android:background="@android:color/transparent"
		                android:layout_marginBottom="5dp"
		                android:visibility="gone"
		                android:layout_marginRight="10dp"
		                android:layout_marginTop="5dp"/>
                    
                    
                </LinearLayout>
                
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	<View android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/colorececec"/>
</LinearLayout>
