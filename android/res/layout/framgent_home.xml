<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/i_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            layout="@layout/common_head" />

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#FFF3BB"
            android:drawableRight="@drawable/common_arrow"
            android:gravity="center_vertical|center_horizontal"
            android:text="您没有打开GPS将不能收到喊一喊。检查设置"
            android:textSize="12sp"
            android:visibility="gone" />
        <!-- 首页广告banner -->

        <RelativeLayout
            android:id="@+id/ll_adv"
            android:layout_width="fill_parent"
            android:layout_height="114dp"
            android:orientation="vertical" >

            <com.gezitech.widget.ExtendViewFlipper
                android:id="@+id/vf_ad"
                android:layout_width="fill_parent"
                android:layout_height="114dp" >
            </com.gezitech.widget.ExtendViewFlipper>

            <LinearLayout
                android:id="@+id/pager_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/colorf8f8f8"
            android:clickable="true" >

            <TextView
                android:id="@+id/tv_home_sy"
                android:layout_width="216dp"
                android:layout_height="51dp"
                android:layout_above="@+id/bt_home_logo"
                android:layout_centerInParent="true"
                android:layout_marginBottom="17dp"
                android:background="@drawable/sy_zi" />

            <Button
                android:id="@+id/bt_home_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/sy_logo" />

            <ImageView
                android:id="@+id/bt_home_circle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/sy_circle" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/i_voice"
        android:layout_width="180dp"
        android:layout_height="180dp"
        layout="@layout/releasehyh_yuyin_dialog"
        android:layout_gravity="center" 
        android:visibility="gone" />

</FrameLayout>