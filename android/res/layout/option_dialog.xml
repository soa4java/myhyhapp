<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:id="@+id/rootView" 
    android:background="@color/white"
    android:orientation="vertical">
    <TextView 
		  android:id="@+id/hobby_title"
		  android:layout_width="fill_parent"
		  android:layout_height="48dp"
		  android:text="选择企业类型"
		  android:textColor="@color/color2c90f6"
		  android:textSize="@dimen/size18"
		  android:gravity="center"
		  android:background="@color/white"/>
	<View android:layout_height="1dp"
	    android:layout_width="fill_parent"
	    android:background="@color/colorececec"
	    />    
    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
			<com.gezitech.widget.ListViewNoScroll
			    android:id="@+id/list_hobby"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:listSelector="@null"
			    android:dividerHeight="0dp"
			    android:divider="@null"
			     />
			<View android:layout_height="1dp"
			    android:layout_width="fill_parent"
			    android:background="@color/colorececec"
			    />  
			<LinearLayout 
				 android:id="@+id/hobby_bottom"
				 android:layout_width="fill_parent"
				 android:layout_height="60dp" 
				 android:orientation="horizontal"
				 android:layout_gravity="bottom"
				 android:paddingLeft="12dp"
            	 android:paddingRight="12dp"
            	 >
				<Button 
					  android:id="@+id/hobby_cancel"
					  android:layout_width="0dp"
					  android:layout_gravity="center_vertical"
					  android:layout_weight="1"
					  android:layout_height="42dp"
					  android:text="@string/cancel"
					  android:textColor="@color/white"
					  android:textSize="@dimen/size18"
					  android:background="@drawable/common_btn_gray"/>
				<Button 
					  android:id="@+id/hobby_ok"
					  android:layout_width="0dp"
					  android:layout_marginLeft="12dp"
					  android:layout_gravity="center_vertical"
					  android:layout_weight="1"
					  android:layout_height="42dp"
					  android:text="@string/confirm"
					  android:textColor="@color/white"
					  android:textSize="@dimen/size18"
					  android:background="@drawable/button_common_btn_blue"/>
			  </LinearLayout> 
			  <LinearLayout 
				 android:id="@+id/hobby_bottom_cannel"
				 android:layout_width="fill_parent"
				 android:layout_height="48dp" 
				 android:clickable="true"
				 android:orientation="horizontal"
				 android:layout_gravity="bottom"
				 android:visibility="gone"
				 
            	 >
				<Button 
					  android:id="@+id/hobby_cancel_2"
					  android:layout_width="0dp"
					  android:layout_gravity="center_vertical"
					  android:layout_weight="1"
					  android:layout_height="48dp"
					  android:text="@string/cancel"
					  android:textColor="@color/black"
					  android:textSize="@dimen/size18"
					   android:background="@color/white"/>
			  </LinearLayout> 
	  </LinearLayout>
	</ScrollView>
</LinearLayout>
