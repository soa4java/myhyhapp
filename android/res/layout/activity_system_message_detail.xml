<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8"
    android:orientation="vertical" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_system_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/color323232"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center_vertical"
                android:text="2014-09-22"
                android:textColor="@color/color949494"
                android:textSize="@dimen/size12" />
            <!--
         <TextView
         android:id="@+id/tv_content"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="内容"
         android:textColor="@color/color323232"
         android:gravity="center_vertical"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="18dp"
         android:layout_marginRight="18dp"
         android:textSize="@dimen/size12"/>
            -->

            <WebView
                android:id="@+id/wv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:fadingEdgeLength="0dp"
                android:scrollbarStyle="@null"
                android:scrollbars="vertical"
                android:padding="0dp"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>