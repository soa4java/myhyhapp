<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/colorf8f8f8" />

    <LinearLayout
        android:id="@+id/myrelease"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/myrelease_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/myrelease_shangjia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_shangjialexing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/shangjialeixing"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_shangjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="酒店"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myrelease_fabufanwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fabufanwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/fabufanwei"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:text="浙江|杭州"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myrelease_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/myrelease_huifu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_huifurenshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/huifurenshu"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="5"
                    android:textColor="@color/color2c90f6"
                    android:textSize="@dimen/size14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myrelease_shengyu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_shengyushijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/shengyushijian"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_shengyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:text="01:15:00"
                    android:textColor="@color/colorff340c"
                    android:textSize="@dimen/size14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorececec" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_myrelease_beizhu"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center_vertical|left"
        android:text=""
        android:textColor="@color/color2c90f6"
        android:textSize="@dimen/size14" />
	<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/colorececec" />
 	<RelativeLayout
        android:id="@+id/myrelease_yuyin"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" >
        <TextView
	         android:id="@+id/myrelease_NUMBER"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true" 
	         android:text="2''"
	         android:textColor="@color/color949494"
	         android:textSize="@dimen/size14"/>
        <RelativeLayout android:layout_width="85dp"
            android:layout_height="43dp"
            android:id="@+id/rl_yuyin_bg"
            android:layout_centerVertical="true" 
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/myrelease_NUMBER"
            android:clickable="true"
            android:background="@drawable/button_dhckdialogbox_biue"
            >
            <ImageView android:id="@+id/iv_voice_sign"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dhck_voice_blue_03"
                android:layout_centerVertical="true" 
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>	
        
        <com.gezitech.widget.RemoteImageView 
		  android:id="@+id/iv_pic"
		  android:layout_width="42dp"
          android:layout_height="42dp"
		  android:layout_alignParentRight="true"
		  android:layout_marginLeft="6dp"
          android:layout_centerVertical="true"
		  />
    </RelativeLayout>

   <RelativeLayout
        android:id="@+id/myrelease_wdfb_cancel"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/colorececec"
        android:clickable="true" >

        <Button
            android:id="@+id/bt_wdfb_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_wdfb_cancel"
            android:background="@drawable/button_wdfb_cancel" />
        <TextView
            android:id="@+id/tv_wdfb_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/quxiaofabu"
            android:textColor="@color/color949494"
            android:textSize="@dimen/size14" />
    </RelativeLayout>
</LinearLayout>