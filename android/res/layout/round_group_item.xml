<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/round_group_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_start_end" >
     <LinearLayout
        android:id="@+id/round_group_item_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:minHeight="@dimen/input_height"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/round_group_item_titlePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pending"
            android:visibility="gone" />
        <LinearLayout android:id="@+id/round_group_item_left_title" 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="right">
	        <TextView android:id="@+id/round_group_item_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="*"
	            android:visibility="visible"
	            android:gravity="center_vertical"
	            android:textColor="@color/annotation_hint"
	            android:textSize="@dimen/size18"/>
	        <TextView
	            android:id="@+id/round_group_item_name"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="@color/round_group_item_name"
	            android:textSize="@dimen/size18"
	            android:text="邮箱"
	            android:gravity="center_vertical"
	             />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/round_group_item_right"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/round_group_item_left"
        android:gravity="right|center_vertical"
         >
        <LinearLayout
            android:id="@+id/round_group_item_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_toLeftOf="@+id/round_group_item_arrow"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">
        </LinearLayout>
        <ImageView
            android:id="@+id/round_group_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_height"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/group_item_more" />
    </RelativeLayout>
</RelativeLayout>