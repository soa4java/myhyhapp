<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
     <RelativeLayout
         android:id="@+id/newFriend_Relative_one"
         android:layout_width="fill_parent"
         android:layout_height="84dp"
         android:background="@color/white"
         android:paddingLeft="18dp"
         android:paddingRight="18dp" >

         <com.gezitech.widget.RemoteImageView
             android:id="@+id/newFriend_photo_one"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_marginTop="12dp"
             android:src="@drawable/common_default_photo" />

         <TextView
             android:id="@+id/newFriend_nickname_one"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="12dp"
             android:layout_marginTop="19dp"
             android:layout_toRightOf="@id/newFriend_photo_one"
             android:text="昵称"
             android:textColor="@color/color323232"
             android:textSize="@dimen/size18" />

         <TextView
             android:id="@+id/newFriend_account_one"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="12dp"
             android:layout_marginTop="52dp"
             android:layout_toRightOf="@id/newFriend_photo_one"
             android:text="此处为账号"
             android:textColor="@color/color949494"
             android:textSize="@dimen/size14" />

         <Button
             android:id="@+id/newFriend_agreedone"
             android:layout_width="54dp"
             android:layout_height="36dp"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:text="@string/tongyi"
             android:textColor="@color/white"
             android:background="@drawable/button_common_btn_gree"
             android:textSize="@dimen/size12" />

        
         <Button
             android:id="@+id/newFriend_refusedone"
             android:layout_width="54dp"
             android:layout_height="36dp"
             android:layout_centerVertical="true"
             android:layout_marginRight="66dp"
             android:layout_alignParentRight="true"
             android:background="@drawable/button_common_btn_red"
             android:text="@string/jujue"
             android:textColor="@color/white"
             android:textSize="@dimen/size12" />
     </RelativeLayout>

     <View
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:background="@color/colorececec" />

</LinearLayout>
