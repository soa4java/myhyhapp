<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8"
    android:orientation="vertical"
    tools:context=".ContactsActivity" >

    <include
        android:id="@+id/i_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        layout="@layout/common_head" />

    <ScrollView
        android:id="@+id/contacts_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/contacts_middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_contacts_title"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/lxwm_logo" />

            <TextView
                android:id="@+id/tv_contacts_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/hyh_banben"
                android:textColor="@color/color949494"
                android:textSize="@dimen/size12" />

            <LinearLayout
                android:id="@+id/contacts_computercompany"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="36dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <RelativeLayout
                    android:id="@+id/contacts_company"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="6dp" >

                    <TextView
                        android:id="@+id/tv_contacts_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/company"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contacts_lianxidianhua"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <RelativeLayout
                    android:id="@+id/contacts_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp" >

                    <TextView
                        android:id="@+id/tv_contacts_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="@string/lianxidianhua"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_contacts_phonenumber"
                         android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:paddingLeft="10dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv_contacts_phone"
                        android:text="0755-12345678"
                        android:textColor="@color/color949494"
                        android:textSize="@dimen/size14" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contacts_fax"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="18dp" >

                <RelativeLayout
                    android:id="@+id/contacts_chuanzhen"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp" >

                    <TextView
                        android:id="@+id/tv_contacts_chuanzhen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:text="联系客服"
                        android:textColor="@color/color323232"
                        android:textSize="@dimen/size14" />

                    <TextView
                        android:id="@+id/tv_contacts_chuanzhennumber"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|center_horizontal|left"
                        android:paddingLeft="10dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv_contacts_chuanzhen"
                        android:text="喊一喊客服"
                        android:textColor="@color/color949494"
                        android:textSize="@dimen/size14" />
                    <ImageView
	                    android:id="@+id/iv_systemsetting_feedback"
	                    android:layout_width="30dp"
	                    android:layout_height="30dp"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="6dp"
	                    android:src="@drawable/common_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contacts_banquan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="39dp"
                android:layout_marginTop="54dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_contacts_hyhbanquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/banquan"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/tv_contacts_banquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hyh_banquan"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/tv_contacts_bq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bq"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size12" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>