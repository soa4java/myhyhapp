<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/colorf8f8f8">
	<include layout="@layout/common_head"
	    android:id="@+id/i_head"
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/header_height" />
	<TextView android:id="@+id/tv_gps"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:text="您没有打开GPS将不能收到喊一喊。检查设置"
	    android:textSize="12sp"
	    android:gravity="center_vertical|center_horizontal"
	    android:background="#FFF3BB"
	    android:drawableRight="@drawable/common_arrow"
	    android:visibility="gone"
	    />
	<ScrollView 
	 android:id="@+id/person_scrollView"
	 android:layout_width="fill_parent"
	 android:layout_height="fill_parent">
		<LinearLayout 
		 android:id="@+id/person_one"
		 android:layout_width="fill_parent"
		 android:layout_height="fill_parent"
		 android:orientation="vertical">
			<RelativeLayout 
			 android:id="@+id/person_Relative"
			 android:layout_width="fill_parent"
			 android:layout_height="84dp"
			 android:background="@drawable/selector_personcolor"

			 android:layout_marginTop="12dp">
				 <com.gezitech.widget.RemoteImageView 
					 android:id="@+id/person_photo"
					 android:layout_width="60dp"
					 android:layout_height="60dp"
					 android:layout_centerVertical="true"
					 android:layout_marginLeft="15dp"
					 android:background="@drawable/common_default_photo"/> 
				 <TextView 
					 android:id="@+id/person_nickname"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="18dp"
					 android:layout_toRightOf="@id/person_photo"
					 android:layout_marginLeft="15dp"
					 android:textSize="@dimen/size18"
					 android:textColor="@color/color323232"
					 android:text="@string/nickname"/>
				 <ImageView android:id="@+id/iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_female"
                    android:layout_toRightOf="@+id/person_nickname"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="6dp"
                    android:visibility="gone"/>
				 <TextView 
					 android:id="@+id/account"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="52dp"
					 android:layout_toRightOf="@id/person_photo"
					 android:layout_marginLeft="15dp"
					 android:textSize="@dimen/size14"
					 android:textColor="@color/color949494"
					 android:text="@string/zh"/>
				 <TextView 
					 android:id="@+id/person_accountnumber"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="52dp"
					 android:layout_toRightOf="@id/account"
					 android:layout_marginLeft="15dp"
					 android:textSize="@dimen/size14"
					 android:textColor="@color/color949494"
					 android:text=""/>      
			</RelativeLayout>
			<View 
			 android:layout_width="fill_parent"
			 android:layout_height="1dp"
			 android:background="@color/colorececec"/>
			<LinearLayout 
			 android:id="@+id/person_btn"
			 android:layout_width="fill_parent"
			 android:layout_height="60dp"
			 android:orientation="horizontal"
			 android:background="@color/white">
				<!-- <Button 
				  android:id="@+id/person_sales"
				  android:layout_width="wrap_content"
				  android:layout_height="42dp"
				  android:layout_weight="1"
				  android:layout_gravity="center_vertical"
				  android:text="@string/sales_bills"
				  android:textSize="@dimen/size18"
				  android:textColor="@color/white"
				  android:background="@drawable/button_common_btn_red"/>
				<Button 
				  android:id="@+id/person_buy"
				  android:layout_width="wrap_content"
				  android:layout_height="42dp"
				  android:layout_gravity="center_vertical"
				  android:layout_marginLeft="30dp"
				  android:layout_weight="1"
				  android:text="@string/buy_bills"
				  android:textSize="@dimen/size18"
				  android:textColor="@color/white"
				  android:background="@drawable/button_common_btn_blue"/>   --> 
				  <LinearLayout android:layout_height="fill_parent"
				      android:layout_width="fill_parent"
				      android:layout_weight="1.0"
				      android:orientation="vertical"
				      android:id="@+id/ll_all_order"
				      android:gravity="center_vertical"
				      android:clickable="true"
				      android:background="@drawable/button_person_select"
				      >
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="0"
				          android:textSize="15sp"
				          android:gravity="center_horizontal"
				          android:textColor="@color/color949494"
				          android:id="@+id/tv_all_order"/>
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="所有订单"
				          android:textSize="12sp"
				           android:gravity="center_horizontal"
				          android:textColor="@color/color949494"/>
				  </LinearLayout>
				  <View android:layout_width="1dp"
				      android:layout_height="fill_parent"
				      android:background="@color/colorececec"/>
				  <LinearLayout android:layout_height="fill_parent"
				      android:layout_width="fill_parent"
				      android:layout_weight="1.0"
				      android:orientation="vertical"
				      android:id="@+id/ll_end_pay"
				      android:gravity="center_vertical"
				      android:clickable="true"
				      android:background="@drawable/button_person_select"
				      >
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="0"
				          android:textSize="15sp"
				          android:gravity="center_horizontal"
				          android:textColor="@color/color949494"
				          android:id="@+id/tv_end_pay"/>
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="已付款"
				          android:textSize="12sp"
				           android:gravity="center_horizontal"
				          android:textColor="@color/color949494"/>
				  </LinearLayout>
				   <View android:layout_width="1dp"
				      android:layout_height="fill_parent"
				      android:background="@color/colorececec"/>
				  <LinearLayout android:layout_height="fill_parent"
				      android:layout_width="fill_parent"
				      android:layout_weight="1.0"
				      android:orientation="vertical"
				      android:id="@+id/ll_service"
				      android:gravity="center_vertical"
				      android:clickable="true"
				      android:background="@drawable/button_person_select"
				      >
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="0"
				          android:textSize="15sp"
				          android:gravity="center_horizontal"
				          android:textColor="@color/color949494"
				          android:id="@+id/tv_service"/>
				      <TextView android:layout_width="fill_parent"
				          android:layout_height="wrap_content"
				          android:text="服务中"
				          android:textSize="12sp"
				           android:gravity="center_horizontal"
				          android:textColor="@color/color949494"/>
				  </LinearLayout>
			</LinearLayout>
			<RelativeLayout 
			 android:id="@+id/person_my_post"
			 android:layout_width="fill_parent"
			 android:layout_height="48dp"
			 android:background="@drawable/selector_personcolor"
			 android:layout_marginTop="12dp"
			 android:clickable="true">
				<ImageView 
				 android:id="@+id/iv_person_editdata"
				 android:layout_width="36dp"
				 android:layout_height="36dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentLeft="true"
				 android:layout_marginLeft="24dp"
				 android:src="@drawable/grzx_fabu_msg"/>
				<TextView 
				 android:id="@+id/tv_person_editdata"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="@dimen/size14"
				 android:layout_centerVertical="true"
				 android:textColor="@color/color323232"
				 android:text="@string/my_post_msg"
				 android:layout_marginLeft="72dp"/>
				 <TextView
	                android:id="@+id/tv_like_comment_count"
	                android:layout_width="18dp"
	                android:layout_height="18dp"
	                android:background="@drawable/hh_number_bg"
	                android:gravity="center_vertical|center_horizontal"
	                android:text="1"
	                android:textColor="@color/white"
	                android:textSize="@dimen/size10"
	                android:layout_centerVertical="true"
	                android:visibility="gone"
	                android:layout_toLeftOf="@+id/iv_person_editdataarrow" />
				<ImageView 
				 android:id="@+id/iv_person_editdataarrow"
				 android:layout_width="30dp"
				 android:layout_height="30dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentRight="true"
				 android:src="@drawable/common_arrow"
				 android:layout_marginRight="12dp"/>   
			</RelativeLayout>
			<RelativeLayout 
			 android:id="@+id/person_editdata"
			 android:layout_width="fill_parent"
			 android:layout_height="48dp"
			 android:background="@drawable/selector_personcolor"
			 android:layout_marginTop="12dp"
			 android:clickable="true">
				<ImageView 
				 android:id="@+id/iv_person_editdata"
				 android:layout_width="36dp"
				 android:layout_height="36dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentLeft="true"
				 android:layout_marginLeft="24dp"
				 android:src="@drawable/grzx_edit"/>
				<TextView 
				 android:id="@+id/tv_person_editdata"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="@dimen/size14"
				 android:layout_centerVertical="true"
				 android:textColor="@color/color323232"
				 android:text="@string/edit_data"
				 android:layout_marginLeft="72dp"/>
				<ImageView 
				 android:id="@+id/iv_person_editdataarrow"
				 android:layout_width="30dp"
				 android:layout_height="30dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentRight="true"
				 android:src="@drawable/common_arrow"
				 android:layout_marginRight="12dp"/>   
			</RelativeLayout>
			<RelativeLayout 
			 android:id="@+id/person_account"
			 android:layout_width="fill_parent"
			 android:layout_height="48dp"
			 android:background="@drawable/selector_personcolor"
			 android:layout_marginTop="12dp"
			 android:clickable="true">
				<ImageView 
				 android:id="@+id/iv_person_account"
				 android:layout_width="36dp"
				 android:layout_height="36dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentLeft="true"
				 android:layout_marginLeft="24dp"
				 android:src="@drawable/grzx_account"/>
				<TextView 
				 android:id="@+id/tv_person_account"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="@dimen/size14"
				 android:layout_centerVertical="true"
				 android:textColor="@color/color323232"
				 android:text="@string/person_account"
				 android:layout_marginLeft="72dp"/>
				<ImageView 
				 android:id="@+id/iv_person_accountarrow"
				 android:layout_width="30dp"
				 android:layout_height="30dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentRight="true"
				 android:src="@drawable/common_arrow"
				 android:layout_marginRight="12dp"/>   
			</RelativeLayout>
			<RelativeLayout 
			 android:id="@+id/person_promotion"
			 android:layout_width="fill_parent"
			 android:layout_height="48dp"
			 android:background="@drawable/selector_personcolor"
			 android:layout_marginTop="12dp"
			 android:clickable="true">
				<ImageView 
				 android:id="@+id/iv_person_promotion"
				 android:layout_width="36dp"
				 android:layout_height="36dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentLeft="true"
				 android:layout_marginLeft="24dp"
				 android:src="@drawable/grzx_generalize"/>
				<TextView 
				 android:id="@+id/tv_person_promotion"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="@dimen/size14"
				 android:layout_centerVertical="true"
				 android:textColor="@color/color323232"
				 android:text="@string/my_promotion"
				 android:layout_marginLeft="72dp"/>
				<ImageView 
				 android:id="@+id/iv_person_promotionarrow"
				 android:layout_width="30dp"
				 android:layout_height="30dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentRight="true"
				 android:src="@drawable/common_arrow"
				 android:layout_marginRight="12dp"/>   
			</RelativeLayout>
			<RelativeLayout 
			 android:id="@+id/person_setting"
			 android:layout_width="fill_parent"
			 android:layout_height="48dp"
			 android:background="@drawable/selector_personcolor"
			 android:layout_marginTop="12dp"
			 android:clickable="true">
				<ImageView 
				 android:id="@+id/iv_person_setting"
				 android:layout_width="36dp"
				 android:layout_height="36dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentLeft="true"
				 android:layout_marginLeft="24dp"
				 android:src="@drawable/grzx_setting"/>
				<TextView 
				 android:id="@+id/tv_person_setting"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="@dimen/size14"
				 android:layout_centerVertical="true"
				 android:textColor="@color/color323232"
				 android:text="@string/system_settings"
				 android:layout_marginLeft="72dp"/>
				<ImageView 
				 android:id="@+id/iv_person_settingarrow"
				 android:layout_width="30dp"
				 android:layout_height="30dp"
				 android:layout_centerVertical="true"
				 android:layout_alignParentRight="true"
				 android:src="@drawable/common_arrow"
				 android:layout_marginRight="12dp"/>   
			</RelativeLayout>    
		</LinearLayout>
	</ScrollView>  
</LinearLayout>
