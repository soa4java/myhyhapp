<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants" >
	<RelativeLayout 
	    android:id="@+id/session_item"
	    android:layout_width="fill_parent"
	    android:layout_height="84dp"
	    android:paddingLeft="18dp"
	    android:clickable="true"
	    android:background="@drawable/chat_item_select2"
	    android:paddingRight="18dp">
	<com.gezitech.widget.RemoteImageView
	    android:id="@+id/iv_session_item"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:src="@drawable/service_photo"/>
	<TextView 
	    android:id="@+id/bt_session_item"
	    android:layout_width="18dp"
	    android:layout_height="18dp"
	    android:layout_marginTop="8dp"
	    android:layout_marginLeft="50dp"
	    android:background="@drawable/hh_number_bg"
	    android:textColor="@color/white"
	    android:textSize="@dimen/size10"
	    android:gravity="center_vertical|center_horizontal"
	    android:text="0"
	    android:visibility="gone"/>
	<TextView 
	    android:id="@+id/tv_session_item_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/iv_session_item"
	    android:layout_marginLeft="12dp"
	    android:layout_marginTop="18dp"
	    android:textSize="@dimen/size18"
	    android:textColor="@color/color323232"
	    android:text=""/> 
	<TextView 
	    android:id="@+id/tv_session_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginTop="22dp"
	    android:textSize="@dimen/size12"
	    android:textColor="@color/color949494"
	    android:text=""/>
	<TextView 
	    android:id="@+id/tv_session_item_context"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/iv_session_item"
	    android:layout_marginLeft="12dp"
	    android:layout_marginTop="52dp"
	    android:textSize="@dimen/size14"
	    android:textColor="@color/color949494"
	    android:text=""
	    android:singleLine="true"
	    android:ellipsize="end"/>  
	</RelativeLayout> 
	<View	android:id="@+id/v_line" 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#d4d4d4"
	    />    
</LinearLayout>
