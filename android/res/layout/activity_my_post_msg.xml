<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8f8f8" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/i_head"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            layout="@layout/common_head" />

        <TextView
            android:id="@+id/tv_gps"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#FFF3BB"
            android:drawableRight="@drawable/common_arrow"
            android:gravity="center_vertical|center_horizontal"
            android:text="您没有打开GPS将不能收到喊一喊。检查设置"
            android:textSize="12sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_new_msg"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/newmsg_bg_select"
            android:drawableLeft="@drawable/icon_comment"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="8条新消息"
            android:textColor="@color/white"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:drawablePadding="5dp"
            android:visibility="gone"
            android:textSize="12sp"/>
        <com.gezitech.widget.MyListView android:id="@+id/list_view"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:listSelector="@android:color/transparent"
	        android:cacheColorHint="@null"
	     	android:scrollingCache="false"
	        android:divider="@null"
	        android:dividerHeight="0dp"
			android:footerDividersEnabled="false"
			android:headerDividersEnabled="false"
			android:background="@color/colorf8f8f8"
		    >
		</com.gezitech.widget.MyListView>
        
    </LinearLayout>
</FrameLayout>