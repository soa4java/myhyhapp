<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 	android:descendantFocusability="blocksDescendants"
 	 android:background="@color/white">
 	<TextView
        android:id="@+id/tv_myrelease_beizhu"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:gravity="center_vertical|left"
        android:text="备注"
        android:textColor="@color/color2c90f6"
        android:textSize="@dimen/size14" />
	<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/colorececec" />
	<LinearLayout
        android:id="@+id/myrelease"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/myrelease_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/myrelease_shangjia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_shangjialexing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="账单金额"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_shangjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="0.33"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myrelease_fabufanwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fabufanwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="限时支付"
                    android:textColor="@color/color323232"
                    android:textSize="@dimen/size14" />

                <TextView
                    android:id="@+id/tv_fabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:text="10分钟"
                    android:textColor="@color/color949494"
                    android:textSize="@dimen/size14" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorececec" />
    </LinearLayout>
	<RelativeLayout
        android:id="@+id/myrelease_yuyin"
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
         >
        <TextView
	         android:id="@+id/myrelease_NUMBER"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true" 
	         android:text="图片"
	         android:textColor="@color/color949494"
	         android:textSize="@dimen/size14"/>        
        <com.gezitech.widget.RemoteImageView 
		  android:id="@+id/iv_pic"
		  android:layout_width="42dp"
          android:layout_height="42dp"
		  android:layout_alignParentRight="true"
		  android:layout_marginLeft="6dp"
          android:layout_centerVertical="true"
          android:src="@drawable/common_default_photo"
		  />
        <TextView
	         android:id="@+id/myrelease_nopic"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true" 
	         android:layout_alignParentRight="true"
	         android:text="无图片"
	         android:textColor="@color/color949494"
	         android:textSize="@dimen/size14"/>
    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/colorf8f8f8" />
</LinearLayout>
