<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
     >
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="70dp"
	        android:orientation="horizontal">
		    <ImageView android:id="@+id/iv_cover"
			    android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp"
			    android:scaleType="centerCrop"
			    android:background="@drawable/default_error"/>
		    <TextView android:id="@+id/tv_number"
			    android:layout_width="wrap_content"
			    android:layout_height="50dp"
			    android:text="14å¼ "
			    android:textColor="@color/color3e3e3e"
			    android:textSize="14sp"
			    android:singleLine="true"
			    android:ellipsize="end"
			    android:layout_gravity="center_vertical|center_horizontal"
			     android:gravity="center_vertical|center_horizontal|right"
			     android:layout_weight="1"/>
		    <LinearLayout android:layout_width="20dp"
		        android:layout_height="50dp"
		        android:orientation="horizontal"
		        android:id="@+id/ll_arrows"
		        android:layout_gravity="center_vertical|center_horizontal"
		        android:gravity="center_vertical|center_horizontal|right"
		        android:layout_marginRight="15dp">
			    <ImageView 
			        android:layout_height="wrap_content" 
			        android:layout_width="wrap_content"
			        android:src="@drawable/common_arrow"
			        />
		    </LinearLayout>
	    </LinearLayout>
	    <View android:layout_width="fill_parent" 
	         android:layout_height="0.5dp"
	         android:background="#999999" />
</LinearLayout>
